<%- include('./includes/head') %>
  <%- include("./includes/nav") %>
    <div class="container">
      <div class="col-lg-2"></div>

      <div class="row">

        <%- include("./includes/msgs.ejs") %>

          <div class="col-lg-6 my-4 m-auto">
            <% if(Object.keys(contact).length>0){ %>
              <h1 class="">Edit <span class="text-info">
                  <%=contact.name%>
                </span>
              </h1>
              <form method="post" action="/contact/edit/<%=contact._id%>">
                <% } else { %>
                  <h1 class="">Add a contact</h1>
                  <form method="post" action="/contact/register">
                    <% } %>

                      <div class="mb-3">
                        <label for="exampleInputName1" class="form-label">Name</label>
                        <input type="text" class="form-control" name="name" id="exampleInputName1"
                          aria-describedby="nameHelp" value="<%=contact.name%>">
                      </div>
                      <div class="mb-3">
                        <label for="exampleInputSecondname1" class="form-label">Second Name</label>
                        <input type="text" class="form-control" name="secondname" id="exampleInputSecondname1"
                          aria-describedby="secondnameHelp" value="<%=contact.secondname%>">
                      </div>
                      <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Email</label>
                        <input type="email" class="form-control" name="email" id="exampleInputEmail1"
                          aria-describedby="emailHelp" value="<%=contact.email%>">
                      </div>
                      <div class="mb-3">
                        <label for="exampleInputTelefone1" class="form-label">Telefone</label>
                        <input type="tel" class="form-control" name="telefone" id="exampleInputTelefone1"
                          value="<%=contact.telefone%>">
                      </div>
                      <% if(Object.keys(contact).length>0){ %>
                        <button type="submit" class="btn btn-primary">Edit</button>
                        <a href="/" class="btn btn-danger">Cancel</a>
                        <% } else { %>
                          <button type="submit" class="btn btn-primary">Save</button>
                          <% } %>
                  </form>
          </div>

      </div>

      <div class="col-lg-2"></div>
    </div>

    <%- include('./includes/footer') %>